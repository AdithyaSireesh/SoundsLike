<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->
    <title>SoundsLike - Almost There</title>

    <!-- Bootstrap -->
    <link href="/bootstrap/css/bootstrap.min.css" type="text/css" rel="stylesheet">
    <link href="/public/css/results.css" type="text/css" rel="stylesheet">
</head>

<body>
<div class="container">
<table>
<tr>
    <th> Song </th>
    <th> Artist </th>
    <th> Preview </th>
</tr>
<% for(var i=0; i < finalResults.tracks.length; i++) { %>
   <tr>
    <td>
        <%= finalResults.tracks[i].name %>
    </td>
    <td>
        <%= finalResults.tracks[i].artists[0].name %>
    </td>
    <td>
        <%if (finalResults.tracks[i].preview_url == "") { %>
            No Preview Available
        <% } else { %>
            <audio controls>
                <source src="<%= finalResults.tracks[i].preview_url%>" type = "audio/mp4">
            </audio>
        <% } %>  
    </td>
   </tr>
<% } %>
</table>
</div>
    
</body>
<script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
<script src="/bootstrap/js/bootstrap.min.js"></script>
<script>
    $.ajax({
        url: '/tests',
        type: "get",
        datatype: "json",
        success: function(response){
            console.log(response);
        }
    });
</script>

</html>